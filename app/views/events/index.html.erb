<p id="notice"><%= notice %></p>

<h1>Events</h1>
<hr>
<h2>Upcoming Events</h2>
  <% if @events.upcoming_events.blank? %>
    <p>No upcoming events at this time.</p>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Location</th>
          <th>Creator</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <% @events.upcoming_events.each do |event| %>
            <tr>
              <td><%= event.date %>
              <td><%= link_to event.description, "events/#{event.id}" %></td>
              <td><%= event.location %></td>
              <td><%= event.creator.username %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  <% end %>
  <br>
<%= link_to 'New Event', new_event_path, class: "btn btn-primary", id: "new-event-btn" %>
<hr>
<h2>Previous Events</h2>
<% if @events.previous_events.blank? %>
    <p>No previous events at this time.</p>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Location</th>
          <th>Creator</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.previous_events.each do |event| %>
          <tr>
            <td><%= event.date %>
            <td><%= link_to event.description, "events/#{event.id}" %></td>
            <td><%= event.location %></td>
            <td><%= event.creator.username %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

<br>

